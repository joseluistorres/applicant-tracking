<p id="notice"><%= notice %></p>

<h1>Job Positions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @job_positions.each do |job_position| %>
      <tr>
        <td><%= job_position.title %> <%= link_to 'Show', job_position %></td>
        <td><%= link_to 'Add Applicants', new_applicant_path(job_position_id: job_position) %></td>
        <td><%= link_to 'Edit', edit_job_position_path(job_position) %></td>
        <td><%= link_to 'Destroy', job_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job Position', new_job_position_path %>
